// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// tables

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  password  String
  role      String?    @default("user")
  nickname  String?
  posts     Post[]
  favorites Favorite[]
  createAt  DateTime?
  updateAt  DateTime?
}

model Post {
  id          String              @id @default(uuid())
  imageUrl    String
  imageWidth  Int
  imageHeight Int
  content     String?
  status      String?
  userId      String
  user        User                @relation(fields: [userId], references: [id])
  categories  CategoriesOnPosts[]
  favorites   PostsToFavorites[]
  createAt    DateTime?
  updateAt    DateTime?
}

model Favorite {
  id     String             @id @default(uuid())
  name   String
  userId String
  user   User               @relation(fields: [userId], references: [id])
  posts  PostsToFavorites[]
}

model Category {
  id    String              @id @default(uuid())
  name  String
  posts CategoriesOnPosts[]
}

model CategoriesOnPosts {
  post       Post     @relation(fields: [postId], references: [id])
  postId     String 
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String 

  @@id([postId, categoryId])
}

model PostsToFavorites {
  postId     String 
  post       Post     @relation(fields: [postId], references: [id])
  favoriteId String
  favorite   Favorite @relation(fields: [postId], references: [id])

  @@id([postId, favoriteId])
}
