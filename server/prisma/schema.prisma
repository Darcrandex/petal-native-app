// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// tables

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String    @unique
  password String
  role     Role      @default(User)
  nickname String?
  posts    Post[]
  createAt DateTime?
  updateAt DateTime?
}

model Post {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String
  imageWidth  Int
  imageHeight Int
  content     String?
  status      PostStatus?
  userId      String      @db.ObjectId
  user        User        @relation(fields: [userId], references: [id])
  createAt    DateTime?
  updateAt    DateTime?
}

enum Role {
  Admin
  User
}

enum PostStatus {
  Saved
  Published
  Rejected
}
