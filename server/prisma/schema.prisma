// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// tables

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     String
  name     String?
  posts    Post[]
  createAt DateTime?
  updateAt DateTime?
}

model Post {
  id          Int       @id @default(autoincrement())
  imageUrl    String
  imageWidth  Int
  imageHeight Int
  content     String?
  published   Boolean?  @default(false)
  author      User?     @relation(fields: [authorId], references: [id])
  authorId    Int?
  createAt    DateTime?
  updateAt    DateTime?
}
